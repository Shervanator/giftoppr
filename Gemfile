source 'https://rubygems.org'

gem 'rails'
gem 'pg'

# Dropbox
gem 'omniauth-dropbox'
gem 'dropbox-sdk', :require => 'dropbox_sdk'

# Uploading assets to S3
gem 'fog'

# Image processing
gem 'fastimage'
gem 'carrierwave'

# Front end stuff
gem 'jquery-rails'

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development, :test do
  gem 'rspec-rails'
end
